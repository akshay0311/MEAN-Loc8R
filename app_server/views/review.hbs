<!--Page Header-->
<div class= "container w3-border-bottom w3-border-gray">
    <div class="row">
        <div class="col-lg-12">
            <p class="w3-xxlarge w3-text-white"><b>Reviews Starcups</b></p>
        </div>
    </div>
</div>
<br>

<!--Form Area-->
<div class="container w3-text-white">
    <form class="form-horizontal" action="/">
        <!--For Name-->
        <div class="form-group">
            <label class="col-sm-2" for="name"><strong>Name:</strong></label>
            <div class="col-sm-10">
                <input type="text" class="form-control w3-text-black" id="name" name="name">
            </div>
        </div>
        <!--Rating-->
        <div class="form-group">
            <label class="col-sm-2" for="rating"><strong>Rating:</strong></label>
            <div class="col-sm-10">
                <input type="number" class="form-control w3-text-black" id="myRating" name="rating">
            </div> 
        </div>
        <!--For Reviews-->
        <div class="form-group">
            <label class="col-sm-2" for="review"><strong>Review</strong></label>
            <div class="col-sm-10">
                <textarea type="text" class="form-control w3-text-black" id="review" name="review" style="height: 200px;"></textarea>
            </div>
        </div>
        <!--Submit Button-->
        <div class="form-group">        
      <div class="col-sm-10 w3-right-align">
        <button type="submit" class="w3-btn w3-white w3-text-black w3-round"><i>Add My Review</i></button>
      </div>
    </div>

    </form>   
</div>